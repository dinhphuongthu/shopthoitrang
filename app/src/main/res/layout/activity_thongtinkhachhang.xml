<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2f4079"

    tools:context=".activity.Thongtinkhachhang">
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/boder"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="80dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="80dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#0a0a0a"
        android:textSize="30sp"
        android:text="Thông tin khách hàng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <EditText
             android:layout_margin="5dp"
             android:inputType="text"
             android:id="@+id/edttenkh"
             android:hint="Nhập tên khách hàng"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
     </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_margin="5dp"
            android:inputType="phone"
            android:id="@+id/edtphonekh"
            android:hint="Nhập số điện thoại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_margin="5dp"
            android:inputType="textEmailAddress"
            android:id="@+id/edtemailkh"
            android:hint="Nhập email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText

            android:inputType="text"
            android:id="@+id/edtDIACHIkh"
            android:hint="Nhập địa chỉ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <Button
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:background="#00BCD4"
        android:textColor="#f20"
        android:textSize="15sp"
        android:padding="10dp"
        android:id="@+id/btnxacnhan"
        android:text="Xác nhận"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:background="#00BCD4"
        android:textColor="#f20"
        android:textSize="15sp"
        android:padding="10dp"
        android:id="@+id/btnTROVE"
        android:text="Trở về"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
</LinearLayout>
</LinearLayout>